<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mohammadfaizan.marsroverproblem.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Inputs" />
    <EditText
        android:id="@+id/upper_right_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Upper Right Coordinates"
        android:maxLength="3"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/rover_one_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rover 1 Deployment"
        android:maxLength="5"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/rover_one_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rover 1 Input"
        android:inputType="textCapCharacters"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/rover_two_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rover 2 Deployment"
        android:maxLength="5"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/rover_two_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rover 2 Input"
        android:inputType="textCapCharacters"
        android:singleLine="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/getOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
